<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task4.SlideShowController" spacing="20" alignment="CENTER">
    <!-- Контейнер для кнопок -->
    <HBox spacing="10" alignment="CENTER">
        <!-- ComboBox для выбора формата -->
        <ComboBox fx:id="formatComboBox" prefWidth="200" promptText="Выберите формат изображения"/>

        <Button fx:id="btnSelectFolder" onAction="#selectFolder">
            <graphic>
                <ImageView fx:id="selectFolderIcon" fitHeight="30" fitWidth="30"/>
            </graphic>
        </Button>

        <!-- Кнопка запуска слайд-шоу -->
        <Button fx:id="btnStart" onAction="#startSlideshow">
            <graphic>
                <ImageView fx:id="startSlideshowIcon" fitHeight="30" fitWidth="30"/>
            </graphic>
        </Button>

        <!-- Кнопка паузы -->
        <Button fx:id="btnPause" onAction="#pauseSlideshow">
            <graphic>
                <ImageView fx:id="pauseSlideshowIcon" fitHeight="30" fitWidth="30"/>
            </graphic>
        </Button>

        <!-- Кнопка остановки -->
        <Button fx:id="btnStop" onAction="#stopSlideshow">
            <graphic>
                <ImageView fx:id="stopSlideshowIcon" fitHeight="30" fitWidth="30"/>
            </graphic>
        </Button>

        <!-- Кнопка для предыдущего слайда -->
        <Button fx:id="btnPrev" onAction="#showPreviousSlide">
            <graphic>
                <ImageView fx:id="prevSlideIcon" fitHeight="30" fitWidth="30"/>
            </graphic>
        </Button>

        <!-- Кнопка для следующего слайда -->
        <Button fx:id="btnNext" onAction="#showNextSlide">
            <graphic>
                <ImageView fx:id="nextSlideIcon" fitHeight="30" fitWidth="30"/>
            </graphic>
        </Button>
    </HBox>

    <!-- Контейнер для отображения слайдов -->
    <ImageView fx:id="imageView" fitWidth="600" fitHeight="400" />
</VBox>
